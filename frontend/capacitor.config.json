{
  "appId": "com.transfers.app",
  "appName": "نظام الحوالات",
  "webDir": "build",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https",
    "iosScheme": "https",
    "hostname": "app.transfers.local"
  },
  "plugins": {
    "Camera": {
      "permissions": [
        "camera",
        "photos"
      ]
    },
    "Filesystem": {
      "androidScheme": "https"
    },
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#1e3a5f",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": true,
      "spinnerColor": "#d4af37"
    }
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true
  },
  "ios": {
    "contentInset": "automatic",
    "scrollEnabled": true
  }
}
